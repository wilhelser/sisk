!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : 'Sisk'
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'Sisk'}"}
    = stylesheet_link_tag 'application', media: 'all'
    -# Modernizr is required for Zurb Foundation
    = javascript_include_tag 'vendor/modernizr'
    = javascript_include_tag 'application'
    = csrf_meta_tags
    <script src="//use.typekit.net/pur7wlk.js"></script>
    <script>try{Typekit.load();}catch(e){}</script>
  %body{class: 'sites'}
    - if user_signed_in?
      .show-for-medium-up
        %ul.settings
          %li.account-link
            = link_to raw("Account &nbsp;&nbsp; <i class='fa fa-user'></i>").html_safe, edit_user_registration_path
          %li.logout-link
            = link_to raw("Logout &nbsp;&nbsp; <i class='fa fa-user'></i>").html_safe, destroy_user_session_path, method: :delete
    = render 'shared/site_header'
    %section.interior-title
      %h1= @page_title ||= "Member Benefits"
    %section.content
      .row
        .medium-10.columns.medium-offset-1
          = render 'layouts/messages'
          = yield
    = render 'shared/footer'
