      .textwidget
        = image_tag 'logo.png', class: 'mb10'
        %p
          \&#xA9;2014 Sisk. All Rights Reserved.
          %br/
          Site designed with love by
          %a{href: "http://www.theinfiniteagency.com"} Infinite
    %article#text-2.large-4.columns.widget.widget_text
      %h3.white Member Benefits
      .textwidget
        %p
          %strong provided by The Sisk Company
          %br
          4055 International Plaza
          %br/
          Suite 440
          %br/
          Fort Worth, TX 76109
    %article#text-4.large-3.columns.widget.widget_text
      .textwidget
        %p
          Toll Free: 1-800-899-7175
          %br/
          Local: 817-735-4884
          %br/
          = link_to "info@siskcompany.com", "mailto:info@siskcompany.com"
