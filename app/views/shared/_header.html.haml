%nav.tab-bar.show-for-medium-down
  %section.right-small
    %a.right-off-canvas-toggle.menu-icon
      %span
  %section.middle.tab-bar-section
    - if @site
      = link_to @site do
        = image_tag 'mobile-logo.png'
    - else
      %a{href: "/"}
        =image_tag 'mobile-logo.png'
%aside.right-off-canvas-menu
  %ul.off-canvas-list
    = render 'shared/mobile_navigation_links'

.header
  .top-bar-container.contain-to-grid.show-for-large-up
    %nav.top-bar{"data-topbar" => ""}
      %ul.title-area
        %li.name
          %h1
            - if @site
              = link_to @site do
                = image_tag 'logo.png'
            - else
              %a{href: "/"}
                =image_tag 'logo.png'
      - if @site
        - if @site.savings_benefits.any?
          .mobile-announcement
            = image_tag 'mobileapp.png'

      %section.top-bar-section
        %ul#main-menu.top-bar-menu.right
          = render 'layouts/navigation_links'
