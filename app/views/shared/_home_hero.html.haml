%section.container{role: "document"}
  .row
    %section#home-hero
      .row
        .medium-7.columns.right
          %h2 Save Money, Great Value, Peace of Mind
        %aside.medium-4.medium-offset-1.home-login-form.left
          .inner
            %header Access Benefits
            #errorMSG
            = simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form', :autocomplete => "off" }) do |f|
              .login-input-wrap
                = f.input :email, :autofocus => true
              .login-input-wrap
                = f.input :password
              .clearfix
              = f.submit "Send", id: "home-submit"
              .clearfix
              = link_to 'Register for an account', new_user_registration_path
