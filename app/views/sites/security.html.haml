- @benefits.each do |benefit|
  .benefits-heading.medium-12
    .inner
      .outer
        .inner.benefit-inner
          = benefit.title
          - if benefit.link
            .benefit-link-wrap
              %a.benefit-link{href: benefit.link}= benefit.link_one_text
          - if benefit.id == 37
            .benefit-link-wrap
              %a.benefit-link{href: "https://www.identityiq.com/Credit-Reports/ReportHome.aspx?offercode=431128GN&plancode=PLAN5&sid=#{current_user.member_id}"} Click Here to Enroll in Identity IQ Protect Max
          - if benefit.id == 38
            .benefit-link-wrap
              %a.benefit-link{href: "https://www.identityiq.com/Credit-Reports/ReportHome.aspx?offercode=431128J7&plancode=PLAN4&sid=#{current_user.member_id}"} Click Here to Enroll in Identity IQ Protect Pro
  %ul.large-block-grid-2.small-block-grid-1
    - if benefit.sections.any?
      - @sections = benefit.sections
      - @sections.each do |section|
        %li.section
          .inner
            .flip-front
              .inner= section.title
            .flip-back
              .inner= section.content.html_safe
  .clearfix
