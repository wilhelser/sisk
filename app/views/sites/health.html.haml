%section.content.interior
  .row
    .medium-10.columns.medium-offset-1
      - @benefits.each do |benefit|
        %article.benefit-item
          %header
            %h3= benefit.title
          .row
            .medium-8.columns
              - if benefit.sections.any?
                - @sections = benefit.sections
                - @sections.each do |section|
                  .benefit
                    %h4= section.title
                    = section.content.html_safe
            .medium-4.columns
              %ul.benefit-links
                - if benefit.link
                  %li
                    %a.benefit-link{href: benefit.link}= benefit.link_one_text
                - if benefit.link_two
                  %li
                    %a.benefit-link{href: benefit.link_two}= benefit.link_two_text
                - if benefit.link_three
                  %li
                    %a.benefit-link{href: benefit.link_three}= benefit.link_three_text
          %footer
            .row
              .medium-2.columns.right
                %button.account-button.right.hide-for-small Show More
        .clearfix
- content_for :interior_header do
  .row
    .interior-title
      %h1= @page_title ||= "Member Benefits"
